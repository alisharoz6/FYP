<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/layoutTtile"
            layout="@layout/titlebar_view" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/layoutTtile">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/layoutTtile"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_detail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:textColor="@color/appBackground"
                    android:hint="Add Incident Detail here...."
                    android:padding="@dimen/_10sdp"
                    android:textColorHint="@color/appBackground"
                    android:textSize="@dimen/_14sdp"
                    android:textAlignment="textStart"
                    android:background="@drawable/round_edges_white"
                    android:layout_marginTop="@dimen/_30sdp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_marginBottom="@dimen/_20sdp">

                    <Button
                        android:id="@+id/btn_camera"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/round_edges_white"
                        android:text="Capture Image"
                        android:textColor="#000"
                        />

                    <Space
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="match_parent" />

                    <Button
                        android:id="@+id/btn_video"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_edges_white"
                        android:text="Capture Video"
                        android:textColor="#000"
                        />
                </LinearLayout>


                <Button
                    android:text="Choose Location"
                    android:id="@+id/map_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_edges_white"
                    android:textColor="#000"
                    android:layout_marginBottom="@dimen/_20sdp"
                    />

                <Button
                    android:id="@+id/btn_gallery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_edges_white"
                    android:text="Open Gallery"
                    android:textColor="#000"
                    android:layout_marginBottom="@dimen/_10sdp"/>

                <Button
                    android:id="@+id/btn_uploadFile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_edges_white"
                    android:text="Upload"
                    android:textColor="#000"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_event"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:padding="30dp"
                        android:src="@drawable/ic_add_alert_black_24dp"
                        android:visibility="gone" />

                    <VideoView
                        android:id="@+id/vv_event"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_50sdp"
                        android:visibility="gone" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_20sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Severity"
                        android:textSize="@dimen/_14sdp"/>

                    <com.xw.repo.BubbleSeekBar
                        android:layout_marginTop="@dimen/_10sdp"
                        android:id="@+id/seek"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:bsb_bubble_color="@color/white"
                        app:bsb_bubble_text_color="@color/colorPrimaryDark"
                        app:bsb_max="100"
                        app:bsb_min="0"
                        app:bsb_progress="0"
                        app:bsb_second_track_color="@color/color_red"
                        app:bsb_section_count="5"
                        app:bsb_section_text_position="bottom_sides"
                        app:bsb_show_progress_in_float="false"
                        app:bsb_show_section_mark="true"
                        app:bsb_show_section_text="true"
                        app:bsb_show_thumb_text="true"
                        app:bsb_track_color="@color/white"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Incident Type"
                        android:textSize="@dimen/_14sdp"
                        android:layout_marginBottom="@dimen/_10sdp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <CheckBox
                            android:id="@+id/cb_theft"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="@dimen/_30sdp"
                            android:text="Theft"
                            android:buttonTint="@color/white"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_20sdp" />

                        <CheckBox
                            android:id="@+id/cb_murder"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="@dimen/_30sdp"
                            android:buttonTint="@color/white"
                            android:text="Murder"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_20sdp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <CheckBox
                            android:id="@+id/cb_fire"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="@dimen/_30sdp"
                            android:buttonTint="@color/white"
                            android:text="Fire"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_20sdp" />
                        <CheckBox
                            android:id="@+id/cb_terror"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="@dimen/_30sdp"
                            android:buttonTint="@color/white"
                            android:text="Terrorism"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_20sdp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <CheckBox
                            android:id="@+id/cb_natural"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="@dimen/_30sdp"
                            android:text="Natural"
                            android:buttonTint="@color/white"
                            android:theme="@style/WhiteCheck"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_20sdp" />

                        <CheckBox
                            android:id="@+id/cb_other"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="@dimen/_30sdp"
                            android:text="Other"
                            android:buttonTint="@color/white"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_20sdp" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </ScrollView>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/menuLayout"
                layout="@layout/layout_menu"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>