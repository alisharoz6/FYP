<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/round_edges_trasparent"
    android:layout_margin="@dimen/_10sdp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@color/appBackground"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="bottom"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_10sdp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="@dimen/_5sdp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Current Password:"
                            android:textColor="@color/white"
                            android:layout_marginBottom="@dimen/_5sdp"/>
                        <EditText
                            android:id="@+id/et_current_password"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:textColor="#000"
                            android:textColorHint="#000"
                            android:textAlignment="center"
                            android:background="@drawable/round_edges_white"
                            android:hint="Enter current password"
                            android:singleLine="true"
                            android:imeOptions="actionNext"
                            android:inputType="textPassword"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="@dimen/_5sdp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="New Password:"
                            android:textColor="@color/white"
                            android:layout_marginBottom="@dimen/_5sdp"/>
                        <EditText
                            android:id="@+id/et_new_password"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:textColor="#000"
                            android:textColorHint="#000"
                            android:textAlignment="center"
                            android:background="@drawable/round_edges_white"
                            android:hint="Enter new password"
                            android:singleLine="true"
                            android:imeOptions="actionNext"
                            android:inputType="textPassword"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="@dimen/_5sdp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Enter New Password  Again:"
                            android:textColor="@color/white"
                            android:layout_marginBottom="@dimen/_5sdp"/>
                        <EditText
                            android:id="@+id/et_new_confirm_password"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:textColor="#000"
                            android:textColorHint="#000"
                            android:textAlignment="center"
                            android:background="@drawable/round_edges_white"
                            android:hint="Enter new password again"
                            android:singleLine="true"
                            android:imeOptions="actionNext"
                            android:inputType="textPassword"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:layout_marginTop="@dimen/_30sdp"
                        >

                        <Button
                            android:id="@+id/btn_cancel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="Cancel?"
                            android:textColor="@color/white"
                            android:background="@drawable/round_edges_red"
                            />
                        <Space
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="match_parent" />
                        <Button
                            android:id="@+id/btn_confirm"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="Confirm?"
                            android:textColor="@color/white"
                            android:background="@drawable/round_edges_red"
                            />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>