<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/layoutTtile"
            layout="@layout/titlebar_view"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/layoutTtile">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/_30sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/_5sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Contact Us:"
                        android:textColor="@color/white"
                        android:layout_marginBottom="@dimen/_5sdp"/>
                    <TextView
                        android:id="@+id/tv_contact_email"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:textColor="#000"
                        android:textColorHint="#000"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:background="@drawable/round_edges_white"
                        android:hint="Contact Email"
                        android:singleLine="true"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/_5sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="About Us:"
                        android:textColor="@color/white"
                        android:layout_marginBottom="@dimen/_5sdp"/>
                    <TextView
                        android:id="@+id/tv_about"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_130sdp"
                        android:textColor="#000"
                        android:textColorHint="#000"
                        android:background="@drawable/round_edges_white"
                        android:hint="About us text"
                        android:textAlignment="center"
                        android:gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:visibility="gone"
                    >

                    <Button
                        android:id="@+id/btn_cancel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="Cancel?"
                        android:textColor="@color/white"
                        android:background="@drawable/round_edges_red"
                        />
                    <Space
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="match_parent" />
                    <Button
                        android:id="@+id/btn_confirm"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="Save?"
                        android:textColor="@color/white"
                        android:background="@drawable/round_edges_red"
                        />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/menuLayout"
                layout="@layout/layout_menu"
                android:visibility="gone"/>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>